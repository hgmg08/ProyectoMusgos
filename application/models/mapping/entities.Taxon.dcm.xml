<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="entities\Taxon" table="taxon" repository-class="repositories\TaxonRepository">
	<id name="id" type="integer" column="id">
		<generator strategy="AUTO" />
	</id>

	<field name="name" type="string" length="200" />
	<field name="acceptedName" column="accepted_name" type="boolean" nullable="TRUE" />
	<field name="endemic"  type="boolean" nullable="TRUE" />
	<field name="authorInitials" column="author_initials" type="string" length="50" nullable="TRUE" />
	<field name="synonimClass" column="synomin_class" type="string" length="50" nullable="TRUE" />
	<field name="creationDate" column="creation_date" type="datetime" />
	<field name="modificationDate" column="modification_date" type="datetime" nullable="TRUE" />
	<field name="comments" type="text" nullable="TRUE" />
	<field name="modificationComments" column="modification_comments" type="text" nullable="TRUE" />
	<field name="status" type="string" length="50" />	

	<!-- Relacion con Rank -->
	<many-to-one field="rank" target-entity="Rank" inversed-by="taxon">
		<join-column name="rank_id" referenced-column-name="id" />
	</many-to-one>

	<!-- Relacion con Taxon (Jerarquia Taxonomica) -->
	<one-to-many field="children_rank" target-entity="Taxon" mapped-by="parent_rank" />
	<many-to-one field="parent_rank" target-entity="Taxon" inversed-by="children_rank">
		<join-column name="parent_rank_taxon_id" referenced-column-name="id" />
	</many-to-one>
	
	<!-- Relacion con Taxon (Sinonimos) -->
	<one-to-many field="children_synonyms" target-entity="Taxon" mapped-by="parent_synonyms" />
	<many-to-one field="parent_synonyms" target-entity="Taxon" inversed-by="children_synonyms">
		<join-column name="parent_taxon_id" referenced-column-name="id" />
	</many-to-one>

	<!-- Relacion con Autor -->
	<many-to-many field="authors" target-entity="Autor" inversed-by="taxons">
		<join-table name="taxon_authors">
			<join-columns>
				<join-column name="taxon_id" referenced-column-name="id" />
			</join-columns>
			<inverse-join-columns>
				<join-column name="autor_id" referenced-column-name="id" />
			</inverse-join-columns>
		</join-table>
	</many-to-many>

	<!-- Relacion con Publicacion -->
  <many-to-many field="publications" target-entity="Publicacion" inversed-by="taxons">
	  <join-table name="taxon_publications">
			<join-columns>
				<join-column name="taxon_id" referenced-column-name="id" />
			</join-columns>
			<inverse-join-columns>
				<join-column name="publication_id" referenced-column-name="id" />
			</inverse-join-columns>																
		</join-table>
	</many-to-many>

	<!-- Relacion con Sustrato -->
	<many-to-many field="sustratos" target-entity="Sustrato" inversed-by="taxons">
		<join-table name="taxon_sustratos">
			<join-columns>
				<join-column name="taxon_id" referenced-column-name="id" />
			</join-columns>
			<inverse-join-columns>
				<join-column name="sustrato_id" referenced-column-name="id" />
			</inverse-join-columns>
		</join-table>
	</many-to-many>

</entity>

</doctrine-mapping>
