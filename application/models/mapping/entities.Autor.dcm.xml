<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
											http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity name="entities\Autor" table="autor" repository-class="repositories\AutorRepository">
	<id name="id" type="integer" column="id">
		<generator strategy="AUTO" />
	</id>

	<field name="name" column="nombre" type="string" length="100" />
	<field name="creationDate" column="fecha_creacion" type="datetime" />
	<field name="modificationDate" column="fecha_modificacion" type="datetime" nullable="TRUE" />
	<field name="comments" columns="comentarios" type="text" nullable="TRUE" />

	<!-- Relacion con Taxon -->
	<many-to-many field="taxones" target-entity="Taxon" mapped-by="autores" />

	<!-- Relacion con Publicacion -->
	<many-to-many field="publicaciones" target-entity="Publicacion" mapped-by="autores" />

</entity>

</doctrine-mapping>
