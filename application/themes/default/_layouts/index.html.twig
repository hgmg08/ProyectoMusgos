<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
   "http://www.w3.org/TR/html4/strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
	{% block head %}
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		
		<link href="{{ base_url('public/css/960_12_col.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ base_url('public/css/reset.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ base_url('public/css/text.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ base_url('public/css/styles.css') }}" rel="stylesheet" type="text/css" />
		
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		
		<script type="text/javascript">
			$(document).ready(function () {
				$("#mdv_logo").attr("src", "{{ base_url('public/images/header_logo') }}" + "/mdv-" + Math.floor(Math.random()*16+1) + ".jpg");
			});
		</script>
		
		<title>{{ title }}</title>
			
	{% endblock %}
</head>
<body>
	<div class="container_12">
		<div class="grid_12 header_logo">
			<img id="mdv_logo" />
		</div>
		
		<div class="clear"></div>
		
		<div class="grid_12 header_menu">
			<ul id="nav">
				<li id="nav_home"><a href="{{ base_url('') }}"></a></li>
				<li id="nav_mdv"><a href="#">¿Qué es MdV</a></li>
				<li id="nav_acerca"><a href="#">Acerca de MdV</a></li>
				<li id="nav_proyectos"><a href="#">Proyectos Relacionados</a></li>
				<li id="nav_contactenos"><a href="#">Contáctenos</a></li>
			</ul>
		</div>
		
		<div class="clear"></div>
		
		{% block content %}
		{% endblock %}
		
		<div class="clear"></div>
		
		<br />
		
		<div class="grid_12 footer">
			<table id="footer_nav">
				<thead>
					<tr>
						<th scope="col">Musgos de Venezuela</th>
						<th scope="col">Acerca de MdV</th>
						<th scope="col">Contáctenos</th>
						<th scope="col">Créditos</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>¿Qué es MdV?</td>
						<td>¿Cómo usar la base de datos?</td>
						<td>María Silvina Ussher</td>
						<td>Agradecimientos</td>
					</tr>
					<tr>
						<td>¿Quiénes somos?</td>
						<td>Participar en el proyecto</td>
						<td>info@prueba.com</td>
						<td></td>
					</tr>
					<tr id="last">
						<td>Objetivos del proyecto</td>
						<td>¿Cómo citar?</td>
						<td></td>
						<td></td>
					</tr>
					<tr>
						<td id="licence" colspan="4">Este sitio se publica bajo licencia Creative Commons</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>

