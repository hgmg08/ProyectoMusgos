					                    { name: 'Coordenadas', type: 'string' },
							    		{ name: 'Referencias', type: 'string' }
					                ],
					                localdata: data,
					                pagesize: 10
					            };
					            var dataAdapter = new $.jqx.dataAdapter(source);
					            
					            var getLocalization = function () {
					                var localizationobj = {};
