					                localizationobj.pagerpreviousbuttonstring = "Anterior";
					                localizationobj.emptydatastring = "No hay informaci칩n para mostrar";
					                return localizationobj;
					            }
					            
					            $("#locationsGrid").jqxGrid(
					            {
					            	width: 938,
					            	autoheight: true,
					                source: dataAdapter,
					                theme: theme,
					                columnsresize: true,
					                enablebrowserselection: true,
					                altrows: true,
					                altstart: 1,
					                altstep: 1,
					                localization: getLocalization(),
					                pageable: true,
					                columns: [
					                	{ text: 'Estado', datafield: 'Estado', width: '10%' },
					                    { text: 'Municipio', datafield: 'Municipio', width: '10%' },
					                    { text: 'Localidad', datafield: 'Nombre', width: '40%' },
					                    { text: 'Altitud (m)', datafield: 'Altitud', width: '10%' },
					                    { text: 'Colecci칩n', datafield: 'Coleccion', width: '20%' },
					                    { text: 'Fecha colecci칩n', datafield: 'FechaColeccion', width: '12%' },
					                    { text: 'Herbario', datafield: 'Herbario', width: '10%' },
					                    { text: 'Coordenadas', datafield: 'Coordenadas', width: '15%' },
							    		{ text: 'Referencias', datafield: 'Referencias', width: '18%' }
					                ]
					           	});  	
					       });
					    </script>