{% extends '_layouts/index.html.twig' %}

{% block head %}

	{{ parent() }}
	
	<link href="{{ base_url('public/css/jquery.bxslider.css') }}" rel="stylesheet" type="text/css" />
	
	<script src="{{ base_url('public/js/jqwidgets/jqxcore.js') }}"></script>
	<script src="{{ base_url('public/js/jqwidgets/jqxinput.js') }}"></script>
	<script src="{{ base_url('public/js/jquery.bxslider.min.js') }}"></script>
	<script src="{{ base_url('public/js/imgliquid.min.js') }}"></script>
	
	<script type="text/javascript">
		$(function(){
			$('.imgfill').imgLiquid();
			$('.slider').bxSlider({
  				mode: 'fade',
  				captions: true,
  				speed: 2000,
  				autoStart: true,
  				auto: true,
  				adaptativeHeight: false
			});
    	});
	</script>

{% endblock %}

{% block content %}
	
	<div class="grid_8 destacados">
		<div class="slider">
			{% for slide in slides %}
				<div class="imgfill"><a href="{{ base_url('taxon') }}/{{ slide.id }}"><img src="{{ slide.img }}" title="{{ slide.caption }}" /></a></div>
			{% endfor %}
		</div>
	</div>
	
	<div class="grid_4 mdv_datos">
		<img id="mdv_title" src="{{ base_url('public/images/mdv_datos/titulo-datos.png') }}" />
		<div class="mdv_data_group">
			<ul id="mdv_data">
				<li><div id="mdv_data_number">{{ rankCount.clase }}</div> <div id="mdv_data_title">Clases</div></li>
				<li><div id="mdv_data_number">{{ rankCount.subclase }}</div> <div id="mdv_data_title">SubClases</div></li>
				<li><div id="mdv_data_number">{{ rankCount.orden }}</div> <div id="mdv_data_title">Ordenes</div></li>
				<li><div id="mdv_data_number">{{ rankCount.familia }}</div> <div id="mdv_data_title">Familias</div></li>
				<li><div id="mdv_data_number">{{ rankCount.genero }}</div> <div id="mdv_data_title">GÃ©neros</div></li>
				<li><div id="mdv_data_number">{{ rankCount.especie }}</div> <div id="mdv_data_title">Especies</div></li>
			</ul>
		</div>
	</div>
	
	<div class="clear"></div>
	
