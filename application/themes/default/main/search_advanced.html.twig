					</td>
					
					<td rowspan="2" class="td_adv_main">
						<fieldset>
							<legend>Hábitat</legend>
							
							<table width="100%" border="0" cellspacing="0" cellpadding="0">
								<tr>
									<td class="adv_cell">
										<label>Ecorregión</label>
										<br/>
										<div id="ecorregion"></div>
									</td>
									<td class="adv_cell">
										<label>Ecosistema</label>
										<br/>
										<div id="ecosistema"></div>
									</td>
									<td class="adv_cell">
										<label>Sustrato</label>
										<br/>
										<div id="sustrato"></div>
									</td>
								</tr>
							</table>
						</fieldset>
						
						<fieldset>
							<legend>Publicación</legend>
							
							<table width="100%" border="0" cellspacing="0" cellpadding="0">
								<tr>
									<td class="adv_cell">
										<label>Autor</label>
										<br/>
										<input id="author_pub" name="author_pub" />
									</td>
									<td class="adv_cell">
										<label>Título</label>
										<br/>
										<input id="title_pub" name="title_pub" />
									</td>
									<td class="adv_cell">
										<label>Año</label>
										<br/>
										<input id="year_pub" name="year_pub" />
									</td>
								</tr>
							</table>
						</fieldset>
						
						<fieldset>
							<legend>Espécimen</legend>
							
							<table width="100%" border="0" cellspacing="0" cellpadding="0">
								<tr>
									<td class="adv_cell">
										<label>Colección</label>
										<br/>
										<input id="collection" name="collection" />
									</td>
									<td class="adv_cell">
										<label>Fecha</label>
										<br/>
										<div id="coll_date"></div>
									</td>
									<td class="adv_cell">
										<label>Herbario</label>
										<br/>
										<input id="herbarium" name="herbarium" />
									</td>
								</tr>
							</table>
						</fieldset>
					</td>
				</tr>
				<tr>
					<td class="td_adv_main">
						<fieldset>
							<legend>Distribución geográfica</legend>
							
							<table width="100%" border="0" cellspacing="0" cellpadding="0">
								<tr>
									<td class="adv_cell">
										<label>Estado</label>
										<br/>
										<div id="estado"></div>
									</td>
									<td class="adv_cell">
										<label>Municipio</label>
										<br/>
										<div id="municipio"></div>
									</td>
								</tr>
								<tr>
									<td colspan="2" class="adv_cell">
										<label>Localidad</label>
										<br/>
										<input id="location" name="location" />
									</td>
								</tr>
								<tr>
									<td class="adv_cell">
										<label>Rango altitudinal</label>
										<br/>
										<input id="alt_range" name="alt_range" />
										metros
									</td>
									<td class="adv_cell">
										<label>Endemismo</label>
										<br/>
										<div id="endemism"></div>
									</td>
								</tr>
							</table>
						</fieldset>
					</td>
				</tr>
			</table>
		</form>
	
	</div>
	

{% endblock %}